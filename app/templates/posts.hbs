<div class="container-fluid">
    <div class="row">
        <div class="col-md-3">
            <h3>Recent Posts</h3>
            <div class="list-group">
                {{#each}}
                    <div class="list-group-item">
                        {{#link-to 'post' this}}{{{title}}}{{/link-to}} <small class="text-muted">by {{author.name}}</small>
                    </div>
                {{/each}}
            </div>
        </div>
        <div class="col-md-9">
            {{outlet}}
        </div>
    </div>
</div>